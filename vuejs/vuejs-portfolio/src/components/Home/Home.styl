@import '~css/variables'

.home-subtitle
  font-size 1.2em
  text-align center
  margin-bottom 20px
  text-transform uppercase
  opacity .5

.home-about
  padding-bottom 40px
  max-width 600px
  margin 0 auto

.home-about__picture
  margin 20px auto 0 auto
  width 80px
  height 80px
  border-radius 50%
  display block

.home-about__links
  display flex
  align-items center
  justify-content center
  margin-top 20px
  > li
    text-transform uppercase
    font-size .8em
    opacity .5
    transition opacity .2s ease
    &:hover
      opacity 1
    &:not(:last-child)
      margin-right 14px

.home-projects
  width 100%
  padding-bottom 20px